#:kivy 1.7.2
#:import kivy kivy

<CButton>:
    size_hint_x: None
    width: app.button_width
    size_hint_y: None
    height: app.button_height
    # background_color: [1, 100, 1, 1]

<DDButton@Button>:
    width: app.button_width
    size_hint_y: None
    height: app.button_height
    # background_color: [1, 100, 1, 1]

<DesktopLayout>:
    #:set back_color1 (0, 255, 0)
    #:set font_color (0, 0, 0, 1)
    old_testament: Old_Testament
    new_testament: New_Testament
    plan_options: PlanOptions
    # plan_name_dropdown: PlanNameDropDown
    # dd_btn: PlanNameButton

    BoxLayout:                          # Main View
        orientation: 'vertical'
        rows: 3
        Button:                         # Menu Bar
            text: 'Future Menu Bar'
            size_hint_y: None
            height: app.button_height
        BoxLayout:                     # Plan Options
            #cols: 2
            id: PlanOptions
            size_hint: 1, .05
            pos_hint: {'x': 0, 'y': .95}

        BoxLayout:
            cols: 2
            BoxLayout: # Bible Books
                orientation: 'vertical'
                Button:
                    text: 'Old Testament'
                    width: 8 * app.button_width
                    size_hint_y: None
                    height: 30
                GridLayout:
                    id: Old_Testament
                    cols: 8
                Button:
                    text: 'New Testament'
                    size_hint_y: None
                    height: 30
                GridLayout:
                    id: New_Testament
                    cols: 8
            BoxLayout:
                id: Customizations
                orientation: 'vertical'
                size_hint: 1, .2
                pos_hint: {'top': 1}
                rows: 3
                BoxLayout:
                    Label:
                        text: 'Psalm A Day'
                    Switch:
                BoxLayout:
                    Label:
                        text: 'Proverbs A Day'
                    Switch:
                BoxLayout:
                    Label:
                        text: 'Wisdom A Day'
                    Switch:
