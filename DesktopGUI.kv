<DesktopLayout>:
    #:set back_color1 (0, 255, 0)
    #:set font_color (0, 0, 0, 1)
    psalmsswitch: PsalmsSwitch
    proverbs_switch: ProverbsSwitch
    wisdom_switch: WisdomSwitch

    BoxLayout:                          # Main View
        orientation: 'vertical'
        rows: 7
        Button:                         # Menu Bar
            text: 'Future Menu Bar'
            size_hint_y: None
            height: app.button_height
        Spinner:
            id: PlanName
            text: 'Select Plan'
            on_text: root.select_plan_name(self.text)
            selected: False
        Spinner:
            id: PlanDuration
            text: 'Select Plan Duration'
            on_text: root.select_plan_duration(self.text)
            selected: False
        Label:
            text: 'Psalm A Day'
        Switch:
            id: PsalmsSwitch
            on_active: root.psalm_callback(self.active)
        Label:
            text: 'Proverbs A Day'
        Switch:
            id: ProverbsSwitch
            on_active: root.proverb_callback(self.active)
        Label:
            text: 'Wisdom A Day'
        Switch:
            id: WisdomSwitch
            on_active: root.wisdom_callback(self.active)
        Button:
            id: CreateButton
            text: 'Create Plan'
            on_release: root.create_plan()
            disabled: True